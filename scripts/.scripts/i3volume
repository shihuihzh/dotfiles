#!/bin/bash

case $BLOCK_BUTTON in
	1) $TERMINAL -e pulsemixer & disown ;;
	3) pamixer -t ;;
	4) pamixer -i 5 ;;
	5) pamixer -d 5 ;;
esac

case $BUTTON in
	1) $TERMINAL -e pulsemixer & disown ;;
	3) pamixer -t ;;
	4) pamixer -i 5 ;;
	5) pamixer -d 5 ;;
esac

vol=$(pamixer --get-volume)

iconget() {
    if [[ $vol -ge 50 ]]; then
            icon="ðŸ”Š"
    else
            icon="ðŸ”‰"
    fi ;}

iconget
# icon="ðŸ”‡ðŸ”‰ðŸ”Š"

printpastatus() {
   [[ $(pamixer --get-mute) = "true" ]] && echo "ðŸ”‡" && exit
   echo "${icon} ${vol}%";
}
printpastatus
