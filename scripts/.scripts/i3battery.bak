#!/bin/bash
NUM=$(cat /sys/class/power_supply/BAT0/capacity)
STATE=$(cat /sys/class/power_supply/BAT0/status)

if [[ $NUM -ge 100 ]]; then
    NUM="100"
fi;

colorget() {
if [[ $NUM -ge 80 ]]; then
	color="#00FF00"
elif [[ $NUM -ge 60 ]]; then
	color="#FFFFFF"
elif [[ $NUM -ge 40 ]]; then
	color="#FFF600"
elif [[ $NUM -ge 20 ]]; then
	color="#FFAE00"
else
	color="#FF0000"
fi ;}

iconget() {
if [[ $NUM -ge 100 ]]; then
	icon="Óß≥"
elif [[ $NUM -ge 75 ]]; then
	icon="Óòª"
elif [[ $NUM -ge 50 ]]; then
	icon="Óò°"
elif [[ $NUM -ge 15 ]]; then
	icon="Óòπ"
else
	icon="Óò∑"
fi ;}

if [[ $STATE == "Charging" ]]; then
	 color="#ffffff"
else
	colorget
    iconget
fi

echo "<span color='$color'>$(echo $STATE | sed -e "s/,//g;s/Discharging/üîã/;s/Charging/üîå/;s/Unknown/‚ùì/;s/Full/‚ö°/;s/ 0*/ /g;s/ :/ /g")$icon$(echo $NUM | sed -e 's/$/%/')</span>"
